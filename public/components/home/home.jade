div(ng-controller="HomeController")
    
    div(class="container")
            
        div(class="left-panel")
            
            div(ng-repeat="feature in features")
            
                    //- featureinfo(item="feature")
                    div(class="row")
                    
                        div(class="dark-gray text-center col-md-12 matting"  ng-mouseenter="mouseEntered($event)" ng-mouseleave="mouseExited($event)" ng-click="go( feature.route )")
                        
                            img(ng-src="{{ feature.image }}" alt="feature image" class="img-responsive")
                            
                            h3 {{ feature.title }}
                
        
        div(class="right-panel")

            h1(class="showcase") WOLFPACK253
                
                
            hr
            
            div(class="col-md-12")
            
                h2(class="panel-content") Message of the Day
                
                a(href="#" class="edit-link fa fa-pencil pull-right") change message
            
            div(class="col-md-12")
                
                p {{ dailyMessage }}
